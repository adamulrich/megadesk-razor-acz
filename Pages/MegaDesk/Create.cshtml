@page
@model MegaDesk_Razor_ACZ.Pages.MegaDesk.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label">Width (min 12, max 92)</label>
                <input asp-for="Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label">Depth</label>
                <input asp-for="Desk.Depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.DrawerCount" class="control-label">Number of Drawers</label>
                <input asp-for="Desk.DrawerCount" class="form-control" />
                <span asp-validation-for="Desk.DrawerCount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="materialSelect" id="materialLabel" class="form-label fw-bold mt-2 mb-2">Material:</label>
                <select id="materialSelect" class="form-select minmax" asp-for="MaterialList" asp-items="Model.MaterialList" aria-labelledby="materialLabel">
                    <option value="" disabled selected>Select an option</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
