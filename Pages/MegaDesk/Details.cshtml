@page
@model MegaDesk_Razor_ACZ.Pages.MegaDesk.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DeskQuote</h4>
    <hr />

    <div class="card  mb-3 minmax">
        <div class="card-header"><strong>Customer: </strong>@Html.DisplayFor(model => model.DeskQuote.CustomerName)</div>
        <div class="card-body">
            <table class="table table.default">
                <tbody>
                    <tr>
                        <th scope="row">Order Date</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.DateforDisplay)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Material</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.Desk.Material.Name)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Width</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.Desk.Width)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Depth</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.Desk.Depth)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Drawer Count</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.Desk.DrawerCount)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Production Time</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.ProductionSpeedCost.Description)
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Price</th>
                        <td>
                            @Html.DisplayFor(model => model.DeskQuote.PriceforDisplay)
                        </td>
                    </tr>


                </tbody>
            </table>
            
        </div>
    </div>

    <a class='btn btn-primary' asp-page="./Index">Back to List</a>
    <a class='btn btn-warning' asp-page="./Edit" asp-route-id="@Model.DeskQuote?.Id">Edit</a>
</div>


